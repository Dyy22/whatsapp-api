{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/status",
      "dest": "/api/status"
    },
    {
      "src": "/send-message",
      "dest": "/api/send-message"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}